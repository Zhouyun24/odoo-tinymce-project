    <record id="gawe_ticket_form_view_id2" model="ir.ui.view">
    <field name="name">gawe_ticket_form_view_id2</field>
    <field name="model">gawe.ticket</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <field name="status" widget="statusbar"/>
            </header>
            <sheet>
                <group>
                    <field name="name" width="100%"/>
                </group>
                <group>
                    <field name="description" widget="html" options="{'tinymce': true}" />
                </group>
                <group>
                    <field name="description2"/>
                </group>
            </sheet>
        </form>
        <data>
            <script type="text/javascript" src="/gawe/static/lib/tinymce/tinymce.min.js"></script>
        </data>
    </field>
</record>

    
       

